@model WorkManager.Models.Assignation

@{
    ViewData["Title"] = "Create";
    var test = Context.GetRouteData().Values["id"];
}
<br />
<h4>Assignation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProgrammerId" class="control-label"></label>
                <select asp-for="ProgrammerId" class ="form-control" asp-items="ViewBag.ProgrammerId"></select>
            </div>
            <div class="form-group">
                @*<label type="hidden" asp-for="AssignmentId" class="control-label"></label>*@
                <input type="hidden" asp-for="AssignmentId" value="test"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Assignments">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
